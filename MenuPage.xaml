<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NhaHang.MenuPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid>
        <Image 
            Source="background.png" 
            Aspect="AspectFill"
            Opacity="1"/>
        <VerticalStackLayout  Padding="10" Spacing="20">
            <Grid>
                <Image Source="giohang.png"
                    WidthRequest="100"
                    HeightRequest="100"
                    HorizontalOptions="End"
                    VerticalOptions="Start" >
                    <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnGioHangTapped"/>
                    </Image.GestureRecognizers>
                    </Image>
                    <Frame Padding="0"
                        HeightRequest="36"
                        WidthRequest="36"
                        CornerRadius="18"        
                        BackgroundColor="Red"
                        HasShadow="False"
                        HorizontalOptions="End"
                        VerticalOptions="Start"
                        Margin="0,6,6,0">        
                    <Label x:Name="lblCartCount"
                        Text="0"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="White"
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"/>
                    </Frame>
            </Grid>
            <!-- Grid hiển thị các món -->
            <Grid ColumnDefinitions="*,*,*,*,*"
                RowDefinitions="auto,auto"
                ColumnSpacing="0"
                RowSpacing="30">

                <!-- Ảnh + chữ chồng lên -->
            <Grid  Grid.Row="0" Grid.Column="0">
                <Frame Padding="0" HasShadow="True" BorderColor="White" BackgroundColor="White" CornerRadius="10" HeightRequest="290" WidthRequest="255">
                    <Grid>
                        <Image Source="lau_nam.png" Aspect="AspectFit" HeightRequest="240" WidthRequest="230" HorizontalOptions="Center" VerticalOptions="Start">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnLauNamTapped"/>
                                <PointerGestureRecognizer PointerEntered="OnLauNamPoint"
                                                        PointerExited="OnLauNamPointer"/>
                            </Image.GestureRecognizers>
                        </Image>
                        <Label 
                            x:Name="lblLauNam" Text="Lẩu Nấm" FontFamily="BirthstoneRegular" FontAttributes="Bold" FontSize="27" TextColor="Black" HorizontalOptions="Center" VerticalOptions="End" Padding="5,2"/>
                    </Grid>
                </Frame>
                </Grid>
             <Grid  Grid.Row="0" Grid.Column="2">
                <Frame Padding="0" HasShadow="True" BorderColor="White" BackgroundColor="White" CornerRadius="10" HeightRequest="290" WidthRequest="255">
                    <Grid >
                        <Image Source="lau_tomyum.png" Aspect="AspectFit" HeightRequest="240" WidthRequest="230" HorizontalOptions="Center" VerticalOptions="Start">
                        <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnLauTomYumTapped"/>
                                <PointerGestureRecognizer PointerEntered="OnLauTomYumPoint"
                                                        PointerExited="OnLauTomYumPointer"/>
                            </Image.GestureRecognizers>
                        </Image>
                        <Label x:Name="lblLauTomYum" Text="Lẩu Tom Yum" FontFamily="BirthstoneRegular" FontAttributes="Bold" FontSize="27" TextColor="Black" HorizontalOptions="Center" VerticalOptions="End" Padding="5,2"/>
                    </Grid>
                </Frame>
             </Grid>

            <Grid  Grid.Row="0" Grid.Column="4">
                <Frame Padding="0" HasShadow="True" BorderColor="White" BackgroundColor="White" CornerRadius="10" HeightRequest="290" WidthRequest="255">
                    <Grid >
                        <Image Source="lau_xuyentieu.png" Aspect="AspectFit" HeightRequest="240" WidthRequest="230" HorizontalOptions="Center" VerticalOptions="Start">
                        <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnLauXuyenTieuTapped"/>
                                <PointerGestureRecognizer PointerEntered="OnLauXuyenTieuPoint"
                                                        PointerExited="OnLauXuyenTieuPointer"/>
                            </Image.GestureRecognizers>
                        </Image>
                        <Label x:Name="lblLauXuyenTieu" Text="Lẩu Xuyên Tiêu" FontFamily="BirthstoneRegular" FontAttributes="Bold" FontSize="27" TextColor="Black" HorizontalOptions="Center" VerticalOptions="End" Padding="5,2"/>
                    </Grid>
                </Frame>
             </Grid>

                <!-- Hàng 2 -->
            <Grid  Grid.Row="1" Grid.Column="1">
                <Frame Padding="0" HasShadow="True" BorderColor="White" BackgroundColor="White" CornerRadius="10" HeightRequest="290" WidthRequest="255">
                    <Grid >
                        <Image Source="lau_cuadong.png" Aspect="AspectFit" HeightRequest="240" WidthRequest="230" HorizontalOptions="Center" VerticalOptions="Start">
                        <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnLauCuaDongTapped"/>
                                <PointerGestureRecognizer PointerEntered="OnLauCuaDongPoint"
                                                        PointerExited="OnLauCuaDongPointer"/>
                            </Image.GestureRecognizers>
                        </Image>
                        <Label x:Name="lblLauCuaDong" Text="Lẩu Cua Đồng" FontFamily="BirthstoneRegular" FontAttributes="Bold" FontSize="27" TextColor="Black" HorizontalOptions="Center" VerticalOptions="End" Padding="5,2"/>
                    </Grid>
                </Frame>
            </Grid>

            <Grid  Grid.Row="1" Grid.Column="3">
                <Frame Padding="0" HasShadow="True" BorderColor="White" BackgroundColor="White" CornerRadius="10" HeightRequest="290" WidthRequest="255">
                    <Grid >
                        <Image Source="lau_tomyumsua.png" Aspect="AspectFit" HeightRequest="240" WidthRequest="230" HorizontalOptions="Center" VerticalOptions="Start">
                        <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnLauTomYumSuaTapped"/>
                                <PointerGestureRecognizer PointerEntered="OnLauTomYumSuaPoint"
                                                        PointerExited="OnLauTomYumSuaPointer"/>
                            </Image.GestureRecognizers>
                        </Image>
                        <Label x:Name="lblLauTomYumSua" Text="Lẩu Tom Yum Sữa" FontFamily="BirthstoneRegular" FontAttributes="Bold" FontSize="27" TextColor="Black" HorizontalOptions="Center" VerticalOptions="End" Padding="5,2"/>
                    </Grid>
                </Frame>
            </Grid>

            </Grid>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
