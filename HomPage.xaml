<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NhaHang.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
<Grid>
    <Image 
        Source="background.png" 
        Aspect="AspectFit"
        Opacity="1"/>
    <ScrollView>
        <VerticalStackLayout
                Padding="55,0"
                Spacing="40"
                HorizontalOptions="Center"
                VerticalOptions="Center" >
            <Image
                    Source="lau.png"
                    HeightRequest="400"
                    WidthRequest="400"
                    Aspect="AspectFit"/>
            <Button
            x:Name="CounterBtn"
            Text="BẮT ĐẦU CA LÀM"
            Clicked="OnCounterClicked"
            FontAttributes="Bold"
            HorizontalOptions="Fill"
            FontSize="18"
            CornerRadius="20"/>
                
        </VerticalStackLayout>
    </ScrollView>
</Grid>
</ContentPage>
